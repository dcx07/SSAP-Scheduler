                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <ContentView>
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                                <Label Text="ðŸ“š" FontSize="64" HorizontalOptions="Center" />

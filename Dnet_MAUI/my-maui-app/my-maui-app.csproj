<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<MauiSingleProject>true</MauiSingleProject>
		<UseMaui>true</UseMaui>
		<!-- Windows-only target framework configuration -->
		<TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
		<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
		<WindowsSdkPackageVersion>10.0.19041.38</WindowsSdkPackageVersion>
		<EnableWindowsTargeting>true</EnableWindowsTargeting>
		<RootNamespace>SSAP_Scheduler</RootNamespace>
		<UseMauiEssentials>true</UseMauiEssentials>
		<LaunchSettingsFilePath>$(MSBuildProjectDirectory)\Properties\launchSettings.json</LaunchSettingsFilePath>
		
		<!-- Disable MSIX packaging completely -->
		<WindowsPackageType>None</WindowsPackageType>
		<UseAppHost>true</UseAppHost>
		<WindowsAppSDKSelfContained>true</WindowsAppSDKSelfContained>
		<PublishSingleFile>false</PublishSingleFile>
		<GenerateAppInstallerFile>false</GenerateAppInstallerFile>
		<AppxPackageSigningEnabled>false</AppxPackageSigningEnabled>
		<GenerateAppxPackageOnBuild>false</GenerateAppxPackageOnBuild>
		
		<!-- Additional properties to avoid MSIX-related tasks -->
		<EnableMsixTooling>false</EnableMsixTooling>
		<UapAppxPackageBuildMode>SideloadOnly</UapAppxPackageBuildMode>
		<AppxBundle>Never</AppxBundle>
		
		<!-- Runtime configuration -->
		<RuntimeIdentifiers>win-x64;win-x86;win-arm64</RuntimeIdentifiers>
		<DefaultLanguage>en-US</DefaultLanguage>
		
		<!-- Display Info -->
		<ApplicationTitle>SSAP Scheduler</ApplicationTitle>
	</PropertyGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg" Color="#512BD4" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\Splash\splash.svg" Color="#512BD4" BaseSize="128,128" />

		<!-- Custom Fonts - optional, will be ignored if directory doesn't exist -->
		<MauiFont Include="Resources\Fonts\*" Condition="Exists('Resources\Fonts')" />

		<!-- Images - optional, will be ignored if directory doesn't exist -->  
		<MauiImage Include="Resources\Images\*" Condition="Exists('Resources\Images')" />

		<!-- Raw Assets - optional, will be ignored if directory doesn't exist -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" Condition="Exists('Resources\Raw')" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
		<PackageReference Include="Microsoft.Maui.Controls" Version="8.0.7" />
		<PackageReference Include="Microsoft.Maui.Controls.Compatibility" Version="8.0.7" />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="8.0.0" />
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
	</ItemGroup>

</Project>